pipeline {
    agent any

    stages {
        stage('Build and Package') {
            steps {
                script{
                 sh """
                 /opt/maven/bin/mvn clean package
                 mv target/java-hello-world.war target/java-helloworld-$BUILD_NUMBER.war
                 aws s3 cp target/java-helloworld-$BUILD_NUMBER.war s3://jenkins-satatic/
                """
                }
            }
        }

        stage('Download and Deploy') {
            steps {
                script{
                sh """   
                 cd
                 aws s3 cp s3://jenkins-satatic/java-helloworld-$build.war .
                 scp  java-helloworld-$build.war ec2-user@:172.31.33.253/home/ec2-user
                 scp  java-helloworld-$build.war ec2-user@:172.31.33.253/opt/tomcat/webapps
                """
                }
            }
        }
    }
}